@using BookWorms.Models.Admins;
@model AdminAddBookViewModel;
@{ ViewData["Title"] = "AddBook"; }

<h1>AddBook</h1>

<form asp-action="AddBook" method="post">

    <div class="row">
        <div class="col-2">
            Book Name
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Book Description
        </div>
        <div class="col-10">
            <textarea class="form-control"
                      asp-for="Description">
    
            </textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>


